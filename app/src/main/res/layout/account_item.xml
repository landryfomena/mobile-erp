<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="8dp"
    android:layout_marginBottom="8dp"
    android:src="@drawable/ic_baseline_person_24"
    android:background="@drawable/rectangle_with_rounded_shape"
    android:id="@+id/account_image"
    android:layout_height="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_account"
        android:text="account Login"
                android:fontFamily="@font/robotomedium"
        app:layout_constraintStart_toEndOf="@+id/account_image"
        app:layout_constraintTop_toTopOf="@+id/account_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_account"
        android:text="account name"
android:fontFamily="@font/robotoregular"
        app:layout_constraintStart_toEndOf="@+id/account_image"
        app:layout_constraintTop_toBottomOf="@+id/login_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:text="company"
        android:fontFamily="@font/robotoblack"

        app:layout_constraintStart_toEndOf="@+id/account_image"
        app:layout_constraintTop_toBottomOf="@+id/name_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/robotolightitalic"
        android:text="www.serveradress.com"
        app:layout_constraintStart_toEndOf="@+id/account_image"
        app:layout_constraintTop_toBottomOf="@+id/company" />
</androidx.constraintlayout.widget.ConstraintLayout>